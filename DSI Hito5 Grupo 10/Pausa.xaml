<Page
    x:Class="DSI_Hito5_Grupo10.Pausa"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DSI_Hito5_Grupo10"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Opacity="0"  Background="Black"/>

        <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <Grid>
                <Image Source="Assets/Fondo_Pausa.jpg" Stretch="Fill" Margin="0,0,-223,-143"/>
                <InkCanvas x:Name="ink"></InkCanvas>
            </Grid>
        </StackPanel>

        <Grid>
            <Button Click="Volver" Foreground="Black" Background="Yellow" FontSize="150" Content="CONTINUAR" HorizontalAlignment="Center" Height="214" Width="905" Margin="0,61,0,0" VerticalAlignment="Top"/>
            <Button Click="ToOpciones" Foreground="Black" Background="Yellow" FontSize="150" Content="OPCIONES" HorizontalAlignment="Center" Height="214" Width="755" Margin="0,374,0,0" VerticalAlignment="Top"/>
            <Button Click ="ToMenu_Principal" Foreground="Black" Background="Yellow" FontSize="150" Content="SALIR" HorizontalAlignment="Center" Height="214" Width="475" Margin="0,686,0,0" VerticalAlignment="Top"/>

        </Grid>
    </Grid>
</Page>
